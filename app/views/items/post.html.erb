<h1> New Post! </h1>

<%= form_tag submit_post_path do %>

  <%= label_tag(:title, "Title of Item") %>
  <%= text_field_tag(:title, nil, placeholder: "Basketball") %>

</br>

  <%= label_tag(:price, "Price of Item") %>
  <%= text_field_tag(:price, nil, placeholder: "5-10$") %>

</br>

<%= label_tag(:description, "Description of Item)") %>
<%= text_field_tag(:description, nil, placeholder: "Slightly worn...") %>

</br>

  <%= submit_tag("Submit your post!") %>
<% end %>
